<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/app_bg"
    android:id="@+id/container"
     >

          <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/learn_button"
          android:drawableLeft="@drawable/learn_button_icon"
          android:background="@color/white"
          android:layout_margin="10dip"
           />
          
          <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/practice_button" 
          android:drawableLeft="@drawable/practice_button_icon"
          android:background="@color/white"
          android:layout_margin="10dip"
          />
                
          <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/progress_button" 
          android:drawableLeft="@drawable/progress_button_icon"
          android:background="@color/white"
          android:layout_margin="10dip"
          />
                      
          <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/reminders_button"
          android:drawableLeft="@drawable/reminders_button_icon"
          android:background="@color/white"
          android:layout_margin="10dip"
           />
                            

   
</LinearLayout>